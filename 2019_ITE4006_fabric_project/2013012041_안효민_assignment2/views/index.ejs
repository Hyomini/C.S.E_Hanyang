<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<title>자동차 거래</title>
		<link rel="stylesheet" href="/stylesheets/style.css" />
		<script src="https://code.jquery.com/jquery-3.1.1.slim.min.js"></script>
	</head>
	<body>
		<br><br><br>

		<div id="main">
			<div class="inner">
				<div class="row gtr-200">
					<div class="col-6">
						<h2>Identity </h2>
						<form method="get" action="enrollAdmin">
							<button type="submit" class="primary" onclick="">enroll admin</button>
						</form>
						<h4>Name  :  <a id="name"><%= name %></a></h4>
						<form method="post" action="registerUser">
							<h4>change user</h4>
							<input type="text" name="user" id="user" value="" placeholder="Enter user name" /><br>
							<button type="submit" class="primary" onclick="">change user</button>
						</form>
					</div>
				</div>
				<hr class="major">

				<div class="row gtr-200">
					<div class ="col-6 col-12-medium">
						<h2>Register My Car</h2>
						<form method="post" action="/registerCar">
							<div class="row gtr-uniform">
								<div class="col-6 col-12-xsmall">
									<h4>make</h4>
									<input type="text" name="make" id="make" value="" placeholder="make" /><br>
									<h4>model</h4>
									<input type="text" name="model" id="model" value="" placeholder="model" /><br>
									<h4>color</h4>
									<input type="text" name="color" id="color" value="" placeholder="color" /><br>
								</div>
							</div>
							<div class="col-12">
								<ul class="actions">
									<li><button id="submit" class="primary" onclick="" />register</li>
									<li><input type="reset" value="reset" /></li>
								</ul>
							</div>
						</form>
					</div>

					<div class ="col-6 col-12-medium">
						<h2>My Cars</h2>
						<table>
							<thead>
								<tr>
									<th>Id</th>
									<th>Owner</th>
									<th>Make</th>
									<th>Model</th>
									<th>Color</th>
								</tr>
							</thead>
							<tbody id="myCars">
							</tbody>
							<script type="text/javascript">
								var	temp = "<%= myCars %>";
								var split = temp.split(',');
								var t="";
								var k=0;
								for(var i=0; i<split.length/5; ++i) {
										t += "<tr>";
										for(var j=0; j<5; ++j) {
											t+= "<td>" + split[k++] + "</td>";
										}
										t+= "</tr>";
								}
								$('#myCars').html(t);
							</script>
						</table>
					</div>

					<div class ="col-6 col-12-medium">
						<h2>Sell My Car</h2>
						<form method="post" action="/sellMyCar">
							<div class="row gtr-uniform">
								<div class="col-12">
									<select name="demo-category" id="mycars-category">
									</select>
								</div>
								<div class="col-12">
                                    <h3>Price : </h3>
                                    <input type="text" name="price" id="price" value="" placeholder="price" />
								 </div>
								 <script type="text/javascript">
									var	mycars = "<%= myCars %>";
									var msplit = mycars.split(',');
									var orders = "<%= carsOnSale %>";	
									var osplit = orders.split(',');
									var after=[];
									for(var i=0; i<osplit.length; i+=7) {
										if(osplit[i+6]=="sale") {
											after.push(osplit[i]);
										}
									}
									var t="";
									for(var i=0; i<msplit.length; i+=5) {
										var check=1;
										for(var j=0; j<after.length; j++) {
											if(msplit[i]==after[j]){
												check=0;
												break;
											}
										}
										if(check==1) {
											t+= "<option>" + msplit[i] +"</option>";
										}
									}
									$('#mycars-category').html(t);
								</script>
								<div class="col-12">
									<ul class="actions">
										<li><input type="submit" value="Sell" class="primary" onclick="" /></li>
										<li><input type="reset" value="reset" /></li>
									</ul>
								</div>
							</div>
						</form>
					</div>


					<div class ="col-6 col-12-medium">
						<h2>Buy Users Car</h2>
						<form method="post" action="/buyUserCar">
							<div class="row gtr-uniform">
								<div class="col-12">
									<select name="demo-category" id="sale-category">
									</select>
									<script type="text/javascript">
										var	mycars = "<%= myCars %>";
										var msplit = mycars.split(',');
										var orders = "<%= carsOnSale %>";	
										var osplit = orders.split(',');
										var after=[];
										for(var i=0; i<osplit.length; i+=7) {
											if(osplit[i+6]=="sale") {
												after.push(osplit[i]);
											}
										}
										var s="";
										for(var i=0; i<after.length; i++) {
											var check=1;
											for(var j=0; j<msplit.length; j+=5) {
												if(msplit[j]===after[i]){
													check=0;
													break;
												}
											}
											if(check==1) {
												s+= "<option>" + after[i] +"</option>";
											}
										}
										$('#sale-category').html(s);
									</script>
								</div>
								<div class="col-12">
									<ul class="actions">
										<li><input type="submit" value="Buy" class="primary" onclick=""/></li>
										<li><input type="reset" value="Reset" /></li>
									</ul>
								</div>
							</div>
						</form>
					</div>

				</div>

				<hr class="major">

				<div class="row gtr-200">
					<div class ="col-6 col-12-medium">
						<h3>registered cars</h3>
						<div class="table-wrapper">
							<table>
								<thead>
									<tr>
										<th>Id</th>
										<th>Owner</th>
										<th>Make</th>
										<th>Model</th>
										<th>Color</th>
									</tr>
								</thead>
								<tbody id="registeredCars">
								</tbody>
								<script type="text/javascript">
									var	temp = "<%= registeredCars %>";
									var split = temp.split(',');
									var t="";
									var k=0;
									for(var i=0; i<split.length/5; ++i) {
											t += "<tr>";
											for(var j=0; j<5; ++j) {
												t+= "<td>" + split[k++] + "</td>";
											}
											t+= "</tr>";
									}
									$('#registeredCars').html(t);
								</script>
							</table>
						</div>
					</div>

					<div class ="col-6 col-12-medium">
						<h3>cars on sale</h3>
						<div class="table-wrapper">
							<table>
								<thead>
									<tr>
										<th>Id</th>
										<th>Owner</th>
										<th>Make</th>
										<th>Model</th>
										<th>Color</th>
										<th>Price</th>
										<th>Status</th>
									</tr>
								</thead>
								<tbody id="carsOnSale">
								</tbody>
								<script type="text/javascript">
									var	temp = "<%= carsOnSale  %>";
									var split = temp.split(',');
									var t="";
									var k=0;
									for(var i=0; i<split.length/7; ++i) {
											t += "<tr>";
											for(var j=0; j<7; ++j) {
												t+= "<td>" + split[k++] + "</td>";
											}
											t+= "</tr>";
									}
									$('#carsOnSale').html(t);
								</script>
							</table>
						</div>
					</div>
				</div>
			</div>
		</div>
	</body>
</html>
